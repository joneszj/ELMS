                @Html.DropDownListFor(m => m.StateId,
                           Model.States.Select(x => new SelectListItem
                           {
                               Text = x.Text,
                               Value = x.Id.ToString(),
                               Selected = Model.StateId == x.Id
                           }), "Select State", new { @class = "form-control" })
