@{
    ViewBag.Title = "Profile";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_UserLayout.cshtml";
}
<div class="panel-group">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse1">Basic Information</a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse in">
            @Html.Action("Person")
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse2">Address Information</a>
            </h4>
        </div>
        <div id="collapse2" class="panel-collapse collapse in">
            @Html.Action("Address")
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse3">Contact Information</a>
            </h4>
        </div>
        <div id="collapse3" class="panel-collapse collapse in">
            @Html.Action("Contact")
        </div>
    </div>
</div>